#!/usr/bin/bash


. $HOME/.aish/functions

#set -x

function puts_error
{
  echo "Error: $1" >&2
}

APP_DIR=$(dirname "$(readlink -f "$0")")

task="$HOME/.aish/task.d/default"
if [ -e "$HOME/.aish/task.d/$1" ];
then
  task="$HOME/.aish/task.d/$1"
  shift
fi

. $task/conf

message_file=$AISH_SESSION/messages.txt

make_message $message_file "$*"
send_request $message_file

